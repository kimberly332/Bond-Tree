rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to user documents for username availability check
    match /users/{userId} {
      allow read: if true;
    }
    
    // Existing user document write rules
    match /users/{userId} {
      allow create: if request.auth != null 
                    && request.resource.data.username.size() >= 3 
                    && request.resource.data.username.size() <= 15
                    && request.resource.data.username.matches('^[a-zA-Z0-9_]+$');
      
      allow update: if request.auth.uid == userId || 
                    // Allow adding/removing friend requests
                    request.resource.data.diff(resource.data).affectedKeys().hasOnly(['friendRequests', 'friends']);
      
      allow delete: if request.auth.uid == userId;
    }
  }
}